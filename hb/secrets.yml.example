# hb/secrets.yml.example
# 复制为 secrets.yml 并填写真实值

# GitHub相关
github:
  token: ""               # GitHub个人访问令牌
  username: ""            # GitHub用户名
  repository: ""          # 仓库名称
  
# 通知服务
notifications:
  email:
    smtp_server: "smtp.gmail.com"
    smtp_port: 587
    username: ""
    password: ""
    
  telegram:
    bot_token: ""
    chat_id: ""
    
  discord:
    webhook_url: ""
    
# 代理配置（如果需要）
proxy:
  enable: false
  http: "http://user:pass@proxy:port"
  https: "http://user:pass@proxy:port"
  
# 其他服务
services:
  health_check:           # 节点健康检查服务
    endpoint: ""
    api_key: ""
